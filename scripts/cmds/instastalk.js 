const axios = require('axios');

module.exports = {
  config: {
    name: "instastalk",
    aliases: ["instainfo"],
    version: "1.1",
    author: "Aryan Chauhan",
    countDown: 5,
    role: 0,
    shortDescription: {
      en: "Get Instagram profile info (enhanced)"
    },
    description: {
      en: "Stalk an Instagram profile and get details like followers, bio, profile picture, verified status, etc."
    },
    category: "info",
    guide: {
      en: "Use: !instastalk <username>\nExample: !instastalk arychauhann"
    }
  },

  onStart: async function({ api, event, args }) {
    const username = args[0];
    if (!username) {
      return api.sendMessage("‚ö†Ô∏è Please provide an Instagram username.", event.threadID, event.messageID);
    }

    api.setMessageReaction("‚è≥", event.messageID, () => {}, true);

    try {
      const response = await axios.get(`https://aryxapi.onrender.com/api/stalker/instagram/v6`, {
        params: { query: username }
      });

      const data = response.data;

      if (!data || !data.username) {
        api.setMessageReaction("‚ùå", event.messageID, () => {}, true);
        return api.sendMessage("‚ö†Ô∏è User not found or API error.", event.threadID, event.messageID);
      }

      // Enhanced formatting with emojis
      const message = `
üìõ Full Name: ${data.fullName || 'N/A'}
üë§ Username: @${data.username} ${data.isVerified ? '‚úÖ' : ''}
üìù Bio: ${data.bio || 'No bio'}
üë• Followers: ${data.followers || '0'} üë•
‚û°Ô∏è Following: ${data.following || '0'} ‚û°Ô∏è
üñº Posts: ${data.uploads || '0'} üñº
üìä Engagement: ${data.engagement || '0%'}
üîí Private: ${data.isPrivate ? 'Yes üîí' : 'No üîì'}
      `;

      api.setMessageReaction("‚úÖ", event.messageID, () => {}, true);

      // Send message with profile picture
      api.sendMessage({
        body: message,
        attachment: await global.utils.getStreamFromURL(data.profileImage, "profile.jpg")
      }, event.threadID, event.messageID);

    } catch (err) {
      console.error(err);
      api.setMessageReaction("‚ùå", event.messageID, () => {}, true);
      api.sendMessage("‚ùå Failed to fetch profile. Make sure the username is correct and profile is public.", event.threadID, event.messageID);
    }
  }
};